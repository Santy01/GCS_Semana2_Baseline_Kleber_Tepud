# Archivo de Configuración de Ejemplo
# =====================================
# Este es un archivo de ejemplo que muestra la estructura de configuración
# NO contiene valores reales y NO debe ser usado en producción
# Copiar este archivo como 'config.js' o 'config.json' y modificar los valores

# Configuración de la Aplicación
# --------------------------------
APP_NAME="Sistema de Gestión"
APP_VERSION="1.0.0"
APP_ENV="development"  # Valores: development, staging, production

# Configuración del Servidor (para futura implementación)
# ---------------------------------------------------------
SERVER_HOST="localhost"
SERVER_PORT="3000"
SERVER_PROTOCOL="http"  # Cambiar a 'https' en producción

# URL Base de la Aplicación
# --------------------------
BASE_URL="http://localhost:3000"

# Configuración de Base de Datos (para futura implementación)
# ------------------------------------------------------------
DB_TYPE="mongodb"  # Opciones: mongodb, mysql, postgresql
DB_HOST="localhost"
DB_PORT="27017"
DB_NAME="gestion_db"
DB_USER="admin"
DB_PASSWORD="[REEMPLAZAR_CON_CONTRASEÑA_REAL]"

# Configuración de Autenticación (para futura implementación)
# ------------------------------------------------------------
# Credenciales de prueba - CAMBIAR EN PRODUCCIÓN
AUTH_DEMO_USERNAME="admin"
AUTH_DEMO_PASSWORD="admin123"

# JWT Configuration
JWT_SECRET="[REEMPLAZAR_CON_SECRET_ALEATORIO_SEGURO]"
JWT_EXPIRATION="24h"  # Tiempo de expiración del token
JWT_REFRESH_EXPIRATION="7d"

# Configuración de Sesión
# ------------------------
SESSION_SECRET="[REEMPLAZAR_CON_SECRET_ALEATORIO]"
SESSION_MAX_AGE="86400000"  # 24 horas en milisegundos
SESSION_SECURE="false"  # true en producción con HTTPS

# Configuración de Seguridad
# ---------------------------
# CORS (Cross-Origin Resource Sharing)
CORS_ENABLED="true"
CORS_ORIGIN="*"  # En producción, especificar dominios permitidos

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"  # Número máximo de requests
RATE_LIMIT_WINDOW_MS="900000"  # Ventana de tiempo: 15 minutos

# Configuración de Logging
# -------------------------
LOG_LEVEL="info"  # Opciones: error, warn, info, debug
LOG_TO_FILE="true"
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE="10M"
LOG_MAX_FILES="5"

# Configuración de Email (para recuperación de contraseña)
# ---------------------------------------------------------
EMAIL_ENABLED="false"
EMAIL_SERVICE="gmail"  # Opciones: gmail, sendgrid, ses, etc.
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="[REEMPLAZAR_CON_EMAIL]"
EMAIL_PASSWORD="[REEMPLAZAR_CON_PASSWORD_APP]"
EMAIL_FROM="noreply@sistemagestion.com"

# Configuración de Almacenamiento
# --------------------------------
STORAGE_TYPE="local"  # Opciones: local, s3, azure
STORAGE_PATH="./uploads"
STORAGE_MAX_FILE_SIZE="10485760"  # 10MB en bytes

# Configuración de Cache (para futura implementación)
# ----------------------------------------------------
CACHE_ENABLED="true"
CACHE_TYPE="memory"  # Opciones: memory, redis
CACHE_TTL="3600"  # Tiempo de vida en segundos
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Configuración de API Externa (si aplica)
# -----------------------------------------
API_KEY="[REEMPLAZAR_CON_API_KEY_REAL]"
API_ENDPOINT="https://api.example.com/v1"
API_TIMEOUT="5000"  # Timeout en milisegundos

# Configuración de Features Flags
# --------------------------------
FEATURE_REGISTRATION="false"  # Habilitar registro de usuarios
FEATURE_PASSWORD_RECOVERY="false"  # Habilitar recuperación de contraseña
FEATURE_REMEMBER_ME="true"  # Habilitar "Recordarme"
FEATURE_TWO_FACTOR_AUTH="false"  # Habilitar autenticación de dos factores

# Configuración de Monitoreo y Analytics
# ---------------------------------------
ANALYTICS_ENABLED="false"
ANALYTICS_ID="[REEMPLAZAR_CON_ANALYTICS_ID]"

# Monitoring
MONITORING_ENABLED="false"
MONITORING_SERVICE="none"  # Opciones: none, newrelic, datadog

# Configuración de Backup
# ------------------------
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *"  # Cron expression: Diario a las 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_PATH="./backups"

# Notas Importantes
# -----------------
# 1. NUNCA subir este archivo con valores reales al repositorio
# 2. Usar variables de entorno para valores sensibles en producción
# 3. Agregar 'config.js', 'config.json', '.env' al .gitignore
# 4. Documentar todos los cambios de configuración en CHANGELOG.md
# 5. Revisar configuración de seguridad antes de desplegar

# Para usar este archivo:
# -----------------------
# 1. Copiar como config.js o .env según el sistema
# 2. Reemplazar todos los valores [REEMPLAZAR_CON_*]
# 3. Ajustar valores según el ambiente (dev/staging/prod)
# 4. Verificar permisos del archivo (solo lectura para el usuario de la app)
